<div class="wrapper">
  <div class="profile_header">
    <%= image_tag 'stock_cover_photo.jpg', class: "cover_photo" %>

        <div class="container">

        <div class="row">
          <div class="col-xs-12 col-sm-3">

            <% if @profile.photo.present? %>
            <!-- photo : user photo -->

              <%= render "shared/profile-photo", profile: @profile  %>
             <%# @image =  @profile.photo %>
              <%#= render 'shared/photo_upload'%>
            <% else %>
              <%= render "shared/github-photo", profile: @profile  %>
              <%# @image = @profile.profile_photo %>
                <%#= render 'shared/photo_upload'%>
            <% end %>

          </div>
        <div class="col-xs-12 col-sm-3">
          <div class="information">


            <h1 class="name"><%= @profile.full_name %></h1>
            <p class="bio"><%= @profile.description %></p>

          </div>
            <!-- <div class="col-xs-6 col-offset-3">
          </div> -->
        </div>
          <div class="col-xs-12 col-sm-3" style="padding-top: 50px;">
            <!--- Jethro's Follow Button ---->
              <%= render "shared/jethro_follow_button" %>
            <!--- Jethro's Follow Button End---->
          </div>
        <div class="col-offset-xs-0 col-offset-sm-3"></div>
      </div>
    </div>

    <%= render 'shared/biocards' %>


      <div class="">
        <h3 class="text-center" >Github Projects</h3>
        <% @profile.projects.each do |project| %>
          <%= render 'shared/project_card', project: project, contributions: project.contributions.where(profile_id: @profile.id) %>
          <%#= render 'projects/photo-upload-project', project: project, profile: @profile %>
        <!-- don't delete, this is photo uploader -->
        <% end %>

      <div class="text-center">
        <p> <%= link_to "Home", root_path %></p>
      </div>
    </div>
  </div>
</div>


