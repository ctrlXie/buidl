<div class="biocards-container">
  <div class="row">


      <div class="bio-left col-xs-12 col-sm-6">

        <div class="bio-flex">
          <div class="bio-flex-item1">

            <div class="biobox biobox-1">
              <div class="biobox-content">
                <div>Github username:</div>
                <strong><%= link_to "https://github.com/#{@profile.github_username}" do %>
                  <i id="ghub" class="fab fa-github fa-2x"></i>
                  <%= @profile.github_username %>
                <% end %></strong>

             </div>
           </div>

            <div class="biobox biobox-4">
              <div class="biobox-content">
                <div>Top language:</div>

                <% unless @profile.top_languages == [] %>
                <div><strong><%= @profile.top_languages.first[0].capitalize %></strong></div>
                <% end %>
            </div>
          </div>
        </div>

        <div class="bio-flex-item2">
          <div class="biobox biobox-2">
            <div class="biobox-content">
              <div>Total commits:</div>
              <div><strong><%= @profile.total_contributions[:commits] %></strong></div>

            </div>
          </div>

          <div class="biobox biobox-3">
             <div class="biobox-content">
              <div><%=  %></div>
            <div>No. of Projects</div>
            <div><strong><%= @profile.repo_number %></strong></div>
          </div>
          </div>
        </div>

        </div>
      </div>


    <div class="bio-right col-xs-12 col-sm-6">
      <div class="topl-container">
<!--         <div class="tolp-title text-center">
          Top Language
        </div> -->
        <div class="topl-graph text-center">
          <%= render 'shared/top_languages' %>
        </div>
      </div>
    </div>
  </div>
</div>




